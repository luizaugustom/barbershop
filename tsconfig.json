{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@/": ["./src/*"]
    },
    "types": ["vitest/globals"],
    "incremental": true,
    "skipLibCheck": true
  }
}